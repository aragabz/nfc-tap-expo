{
  "expo": {
    "name": "Digital Business Cards",
    "slug": "digital-business-cards",
    "version": "1.0.0",
    "orientation": "portrait",
    // "icon": "./assets/images/Tasama.png",
    "splash": {
      // "image": "./assets/images/Tasama.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A5E"
    },
    "scheme": ["msauth", "com.tasama.digitalbusinesscards"],
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tasama.digitalbusinesscards",
      "infoPlist": {
        "NFCReaderUsageDescription": "Allow $(PRODUCT_NAME) to use NFC to share and scan business cards"
      },
      "entitlements": {
        "com.apple.developer.nfc.readersession.formats": ["NDEF", "TAG"]
      }
    },
    "android": {
      "splash": {
        // "image": "./assets/images/Tasama.png",
        "resizeMode": "contain",
        "backgroundColor": "#FFFFFF"
      },
      "adaptiveIcon": {
        "backgroundColor": "#0B2B70",
        "foregroundImage": "./assets/images/Tasama.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.NFC",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.tasama.digitalbusinesscards"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Tasama.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1A1A5E",
          "dark": {
            "backgroundColor": "#1A1A5E"
          },
          "android": {
            "backgroundColor": "#1A1A5E",
            "resizeMode": "native",
            "image": "./assets/images/Tasama.png"
          },
          "ios": {
            "backgroundColor": "#1A1A5E",
            "image": "./assets/images/Tasama.png"
          }
        }
      ],
      [
        "react-native-nfc-manager",
        {
          "nfcReaderUsageDescription": "Allow $(PRODUCT_NAME) to use NFC to share and scan business cards"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan business card QR codes"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos to select a profile image"
        }
      ],
      "expo-secure-store",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
